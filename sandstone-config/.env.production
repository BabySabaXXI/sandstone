# =============================================================================
# SANDSTONE APP - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# These values should be set in your deployment platform (Vercel, etc.)
# DO NOT commit actual secrets - use environment variable injection
# =============================================================================

# -----------------------------------------------------------------------------
# SUPABASE CONFIGURATION
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=${NEXT_PUBLIC_SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${NEXT_PUBLIC_SUPABASE_ANON_KEY}
SUPABASE_SERVICE_ROLE_KEY=${SUPABASE_SERVICE_ROLE_KEY}
SUPABASE_ACCESS_TOKEN=${SUPABASE_ACCESS_TOKEN}

# -----------------------------------------------------------------------------
# DATABASE CONNECTION
# -----------------------------------------------------------------------------
DATABASE_URL=${DATABASE_URL}
DIRECT_URL=${DIRECT_URL}
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=30000

# -----------------------------------------------------------------------------
# MOONSHOT AI / KIMI API CONFIGURATION
# -----------------------------------------------------------------------------
KIMI_API_KEY=${KIMI_API_KEY}
KIMI_API_BASE_URL=https://api.moonshot.cn/v1
KIMI_DEFAULT_MODEL=moonshot-v1-8k
KIMI_REQUEST_TIMEOUT=60000

# -----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=${NEXT_PUBLIC_APP_URL}
NODE_ENV=production
LOG_LEVEL=warn

# -----------------------------------------------------------------------------
# AUTHENTICATION CONFIGURATION
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET=${NEXTAUTH_SECRET}
NEXTAUTH_URL=${NEXTAUTH_URL}
GITHUB_CLIENT_ID=${GITHUB_CLIENT_ID}
GITHUB_CLIENT_SECRET=${GITHUB_CLIENT_SECRET}
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_AI_GRADING=true
NEXT_PUBLIC_ENABLE_FLASHCARDS=true
NEXT_PUBLIC_ENABLE_QUIZZES=true
NEXT_PUBLIC_ENABLE_DOCUMENTS=true
NEXT_PUBLIC_DEFAULT_DARK_MODE=true

# -----------------------------------------------------------------------------
# STORAGE CONFIGURATION
# -----------------------------------------------------------------------------
STORAGE_BUCKET=user-uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.png,.jpg,.jpeg

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
GRADING_RATE_LIMIT_PER_HOUR=10

# -----------------------------------------------------------------------------
# CACHE CONFIGURATION
# -----------------------------------------------------------------------------
CACHE_TTL=600

# -----------------------------------------------------------------------------
# SECURITY HEADERS
# -----------------------------------------------------------------------------
# These are configured in next.config.mjs or middleware.ts
